[user]
  name = chantra
  email = chantra@debuntu.org
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  sh = show
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
  squash = !sh -c 'git commit -m \"squash! $(git log -1 --format='\\''%s'\\'' $@)\"' -
  ri = rebase --interactive --autosquash
  amend = commit --amend
  logbranch = log --graph --all --decorate
[gc]
    auto = 0

[include]
    path = .gitconfig.local

[core]
    preloadindex = true
